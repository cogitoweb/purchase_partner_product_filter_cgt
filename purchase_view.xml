<openerp>
	<data>

        <record id="purchase_order_partner_product_filter_form" model="ir.ui.view">
            <field name="name">purchase.order.partner.product.filter</field>
            <field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
				<xpath expr="//page[@string='Products']/field[@name='order_line']/tree[@string='Purchase Order Lines']/field[@name='product_id']" position="attributes">
                    <attribute name="context">{'filter_partner_product':True, 'partner_id':parent.partner_id, 'search_default_dummy':True}</attribute>
				</xpath>
			</field>
		</record>

	</data>
</openerp>
